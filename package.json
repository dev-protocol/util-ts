{
	"name": "@devprtcl/utils",
	"version": "1.2.0",
	"description": "TypeScript Utilities",
	"main": "index.js",
	"scripts": {
		"test": "ava",
		"build": "tsc",
		"watch": "tsc -w",
		"pretest": "yarn build",
		"prebuild": "rimraf dist",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{js,json,md,yml}'"
	},
	"author": "",
	"license": "MPL-2.0",
	"dependencies": {
		"bent": "7.3.12",
		"ethereum-waffle": "3.2.0",
		"ramda": "^0.27.1"
	},
	"devDependencies": {
		"@ava/typescript": "1.1.1",
		"@types/dotenv": "8.2.0",
		"@types/node": "14.14.8",
		"@types/ramda": "0.27.32",
		"@typescript-eslint/eslint-plugin": "4.8.1",
		"@typescript-eslint/parser": "4.8.1",
		"@types/bent": "7.3.2",
		"ava": "3.13.0",
		"dotenv": "8.2.0",
		"eslint": "7.13.0",
		"eslint-config-prettier": "6.15.0",
		"eslint-plugin-functional": "3.1.0",
		"eslint-plugin-prettier": "3.1.4",
		"husky": "4.3.0",
		"prettier": "2.1.2",
		"rimraf": "3.0.2",
		"typescript": "4.0.5"
	},
	"ava": {
		"files": [
			"**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"/": "dist/"
			}
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/utils.git"
	},
	"bugs": {
		"url": "https://github.com/dev-protocol/utils/issues"
	},
	"homepage": "https://github.com/dev-protocol/utils#readme"
}
